
<div class="col-md-6 m-auto">
    <h2 class="text-center">Create a new drone</h2>
    <div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      {{!-- {{> messages}} --}}
      <form action="/drones/create" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="{{name}}"
          />
        </div>
        <div class="form-group">
          <label for="propellers">Propellers</label>
          <input
            type="number"
            id="propellers"
            name="propellers"
            class="form-control"
            placeholder="Number of Propellers"
            value="{{propellers}}"
          />
        </div>
        <div class="form-group">
          <label for="maxSpeed">Max Speed</label>
          <input
            type="number"
            id="maxSpeed"
            name="maxSpeed"
            class="form-control"
            placeholder="Max Speed"
          />
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-success btn-block">
            Create
            </button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>